<!DOCTYPE html>
<html>
  <% include partials/headChat.ejs %>
  <body>
    <div class="header">
      <div class="header-title">
        <h3><%= viewData.appTitle %></h3>
      </div>
      <div class="header-title">
        <p>Total users: <span id="totalUsers"></span></p>
      </div>
    </div>
    <div class="chat-container">
      <div class="chat-container-logs-container">
        <div id="messages"></div>
      </div>
      <div class="chat-container-input-container">
        <input
          placeholder="<%=viewData.username%>"
          type="text"
          id="chat-input"
        />
        <button
          type="submit"
          id="chat-send-button"
          onClick="sendMessage('<%= viewData.username %>')"
        >
          Send
        </button>
      </div>
    </div>
  </body>
</html>
